<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @movie.image_url %>"></dd>

      <dt>Director</dt>
      <dd><a href="/directors/<%= @movie.director_id %>">
        <%= Director.find_by(:id=>@movie.id).name %></a>
      </dd>

      <dt>Number of Characters</dt>
      <dd><%= Character.where(:movie_id=>@movie.id).count %></dd>

      <dt>List of Characters</dt>
      <dd>
        <ul>
          <% Character.where(:movie_id => @movie.id).each do |character| %>
          <li><a href="/characters/<%= character.id %>"><%= character.name %></a></li>
          <% end %>
        </ul>
      </dd>

      <dt>List of Actors</dt>
      <dd>
        <ul>
          <% Character.where(:movie_id => @movie.id).each do |character| %>
          <li><a href="/characters/<%= character.id %>"><%=Actor.find_by(:id=>character.id).name%></a></li>
          <% end %>
        </ul>
      </dd>
    </dt>


    <div class="page-header">
      <h3>Add Character</h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form action="/create_character" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for movie_id -->
          <!-- <div class="form-group">
          <label for="movie_id" class="control-label">
          Movie
        </label> -->

        <input type="hidden" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%= @movie.id %>">
        <!-- </div> -->

        <!-- Label and input for actor_id -->
        <div class="form-group">
          <label for="actor_id" class="control-label">
            Actor
          </label>

          <input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control" value="<%= @character.actor_id %>">
        </div>

        <!-- Label and input for name -->
        <div class="form-group">
          <label for="name" class="control-label">
            Name
          </label>

          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
        </div>

        <button class="btn btn-success">
          Create Character
        </button>
        or
        <a href="/characters">Cancel</a>
      </form>
    </div>
  </div>
